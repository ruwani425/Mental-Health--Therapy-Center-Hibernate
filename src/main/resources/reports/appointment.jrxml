<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="AppointmentsReport" pageWidth="842" pageHeight="595" orientation="Landscape"
              columnWidth="802" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Define fields that match your SQL query results -->
    <field name="appointmentId" class="java.lang.Integer"/>
    <field name="date" class="java.sql.Date"/>
    <field name="balance" class="java.math.BigDecimal"/>
    <field name="status" class="java.lang.String"/>
    <field name="patientName" class="java.lang.String"/>
    <field name="therapistName" class="java.lang.String"/>
    <field name="programName" class="java.lang.String"/>
    <field name="programFee" class="java.math.BigDecimal"/>
    <field name="paymentStatus" class="java.lang.String"/>
    <field name="amount" class="java.math.BigDecimal"/>
    <field name="paymentDate" class="java.sql.Date"/>

    <!-- Report title -->
    <title>
        <band height="79" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="0" width="802" height="40"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="24" isBold="true"/>
                </textElement>
                <text><![CDATA[Appointments Report]]></text>
            </staticText>
            <textField pattern="MMMMM dd, yyyy">
                <reportElement x="651" y="40" width="151" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- Column headers -->
    <columnHeader>
        <band height="30" splitType="Stretch">
            <staticText>
                <reportElement x="0" y="0" width="50" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[ID]]></text>
            </staticText>
            <staticText>
                <reportElement x="50" y="0" width="80" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Date]]></text>
            </staticText>
            <staticText>
                <reportElement x="130" y="0" width="120" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Patient]]></text>
            </staticText>
            <staticText>
                <reportElement x="250" y="0" width="120" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Therapist]]></text>
            </staticText>
            <staticText>
                <reportElement x="370" y="0" width="100" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Program]]></text>
            </staticText>
            <staticText>
                <reportElement x="470" y="0" width="70" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Program Fee]]></text>
            </staticText>
            <staticText>
                <reportElement x="540" y="0" width="70" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Balance]]></text>
            </staticText>
            <staticText>
                <reportElement x="610" y="0" width="70" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Status]]></text>
            </staticText>
            <staticText>
                <reportElement x="680" y="0" width="70" height="20"/>
                <textElement>
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Payment]]></text>
            </staticText>
            <line>
                <reportElement x="0" y="25" width="802" height="1"/>
            </line>
        </band>
    </columnHeader>

    <!-- Detail band for each record -->
    <detail>
        <band height="25" splitType="Stretch">
            <textField>
                <reportElement x="0" y="0" width="50" height="20"/>
                <textFieldExpression><![CDATA[$F{appointmentId}]]></textFieldExpression>
            </textField>
            <textField pattern="MM/dd/yyyy">
                <reportElement x="50" y="0" width="80" height="20"/>
                <textFieldExpression><![CDATA[$F{date}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="130" y="0" width="120" height="20"/>
                <textFieldExpression><![CDATA[$F{patientName}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="250" y="0" width="120" height="20"/>
                <textFieldExpression><![CDATA[$F{therapistName}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="370" y="0" width="100" height="20"/>
                <textFieldExpression><![CDATA[$F{programName}]]></textFieldExpression>
            </textField>
            <textField pattern="$#,##0.00">
                <reportElement x="470" y="0" width="70" height="20"/>
                <textFieldExpression><![CDATA[$F{programFee}]]></textFieldExpression>
            </textField>
            <textField pattern="$#,##0.00">
                <reportElement x="540" y="0" width="70" height="20"/>
                <textFieldExpression><![CDATA[$F{balance}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="610" y="0" width="70" height="20"/>
                <textFieldExpression><![CDATA[$F{status}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="680" y="0" width="122" height="20"/>
                <textFieldExpression><![CDATA[$F{paymentStatus} + " ($" + $F{amount} + ")"]]></textFieldExpression>
            </textField>
            <line>
                <reportElement x="0" y="24" width="802" height="1" forecolor="#CCCCCC"/>
            </line>
        </band>
    </detail>

    <!-- Page footer -->
    <pageFooter>
        <band height="30" splitType="Stretch">
            <textField>
                <reportElement x="702" y="10" width="60" height="20"/>
                <textElement textAlignment="Right"/>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER} + " of"]]></textFieldExpression>
            </textField>
            <textField evaluationTime="Report">
                <reportElement x="762" y="10" width="40" height="20"/>
                <textFieldExpression><![CDATA[" " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

    <!-- Summary section at the end -->
    <summary>
        <band height="50">
            <staticText>
                <reportElement x="0" y="10" width="802" height="20"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[*** End of Report ***]]></text>
            </staticText>
        </band>
    </summary>
</jasperReport>